function PutChar(char character) {
	/*if (character == '\n') {
		NewLine();
	} else {*/
		screenBuffer[Current.position] = Entry(character, Current.color);
		Current.position++;
		if Current.position >= MAX.COLS * MAX.ROWS {
			Current.position = 0;
		}
	/*}*/
}


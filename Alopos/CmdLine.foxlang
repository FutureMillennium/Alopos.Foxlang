
namespace CmdLine:


//@section consts

const MAX {
	Index COLS = 80;
	Index ROWS = 25;
}


//@section defs

enum Bit4 Colors {
	Black = 0,
	Blue = 1,
	Green = 2,
	Cyan = 3,
	Red = 4,
	Magenta = 5,
	Brown = 6,
	LightGrey = 7,
	DarkGrey = 8,
	LightBlue = 9,
	LightGreen = 10,
	LightCyan = 11,
	LightRed = 12,
	LightMagenta = 13,
	LightBrown = 14,
	White = 15,
};

struct Byte2 Entry @packed {
	Color color;
	Char char;
}


//@section vars

Current {
	Index{0 .. < MAX.COL * MAX.ROW} position;
	Color color;
}

volatile Byte2 Pointer screenBuffer;

Byte2 ioPort; // base IO port for video (VGA), usually 0x3D4


//@section

function Init() { //@entry

	Current.position = 0;
	Current.color.SetDefault();
	/*ioPort = valueof 0x0463; // @TODO always at 0x0463?

	OutB(ioPort, 0x0A); // Cursor Start Register
	Cursor.startRegister = InB(ioPort + 1);*/

	// @TODO monochrome monitors at 0xB0000?
	// @TODO video address const
	// @TODO is it always 0xB8000?
	screenBuffer = 0xB8000; // VGA text mode 3 video buffer address
}

